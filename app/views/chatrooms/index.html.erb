<div class="center container">
  <div class="row">
    <div class="col-md-12"> 

      <p id="notice"><%= notice %></p>

      <h1>Chatrooms</h1>

      <table>
        <thead>
          <tr>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @chatrooms.each do |chatroom| %>
            <tr>
              <td><%= link_to 'Show', chatroom %></td>
              <td><%= link_to 'Edit', edit_chatroom_path(chatroom) %></td>
              <td><%= link_to 'Destroy', chatroom, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Chatroom', new_chatroom_path, class: 'btn btn-primary btn-sm' %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to 'Sessions', sessions_path, class: 'btn btn-success btn-sm' %>
    </div>
  </div>
</div>