<p id="notice"><%= notice %></p>

<h4 class="ui center aligned medium icon header">
  <i class="circular apple icon orange inverted"></i>
  Sessions
</h4>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sessions.each do |session| %>
      <tr>
        <td><%= link_to 'Show', session %></td>
        <td><%= link_to 'Edit', edit_session_path(session) %></td>
        <td><%= link_to 'Destroy', session, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Session', new_session_path, class: 'small ui orange button' %><%= link_to 'Home', chatrooms_path, class: 'small ui orange button' %>